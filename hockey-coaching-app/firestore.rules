rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if document belongs to the authenticated user
    function belongsToUser() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Helper function to check if incoming data has correct userId
    function hasCorrectUserId() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // TEAMS - Users can only access their own teams
    match /teams/{teamId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // PLAYERS - Users can only access players from their teams
    match /players/{playerId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // SEASONS - Users can only access their own seasons
    match /seasons/{seasonId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // GAMES - Users can only access their own games
    match /games/{gameId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // SHOTS - Users can only access shots from their games
    match /shots/{shotId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // GOALS AGAINST - Users can only access goals from their games
    match /goalsAgainst/{goalId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // GAME EVENTS - Users can only access events from their games
    match /gameEvents/{eventId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // DRILLS - Users can only access their own drills
    match /drills/{drillId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // PRACTICE PLANS - Users can only access their own practice plans
    match /practicePlans/{planId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // TACTICAL DRAWINGS - Users can only access drawings from their games
    match /tacticalDrawings/{drawingId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // GAME PRESETS - Users can only access their own presets
    match /gamePresets/{presetId} {
      allow read, write: if belongsToUser();
      allow create: if isAuthenticated() && hasCorrectUserId();
    }

    // Deny all other requests
    match /{document=**} {
      allow read, write: if false;
    }
  }
}